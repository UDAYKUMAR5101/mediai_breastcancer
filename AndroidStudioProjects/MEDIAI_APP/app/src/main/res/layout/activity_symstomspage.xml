<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".symstomspage"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Back Arrow -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_side_arrow"
            android:contentDescription="Back"
            android:scaleType="centerInside"
            android:padding="12dp"/>

        <!-- Centered Title -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your Health Info"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provide accurate details to calculate your risk profile"
                android:textSize="14sp"
                android:textColor="#808080"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:overScrollMode="always"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingBottom="32dp">

            <!-- Section: Basic Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Your Age -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Age"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/ageEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your age"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/black"
                android:textColorHint="#B0B0B0"
                android:inputType="number"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter age between 10-100 years"
                android:textSize="12sp"
                android:textColor="#808080"
                android:layout_marginBottom="20dp" />

            <!-- Menopausal Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menopausal Status"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/preMenopausalButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Pre-menopausal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/toggle_button_active"
                    android:layout_marginEnd="8dp"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/postMenopausalButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Post-menopausal"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/toggle_button_inactive"
                    android:layout_marginStart="8dp"
                    android:stateListAnimator="@null" />

            </LinearLayout>

            <!-- Section: Medical History -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical History"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Family History of Breast Cancer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Family History of Breast Cancer"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_warning"
                    android:contentDescription="Info"
                    android:alpha="0.6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/familyHistoryYesButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/toggle_button_inactive"
                    android:layout_marginEnd="8dp"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/familyHistoryNoButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="No"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/toggle_button_active"
                    android:layout_marginStart="8dp"
                    android:stateListAnimator="@null" />

            </LinearLayout>

            <!-- BMI -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body Mass Index (BMI)"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/bmiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter BMI"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/black"
                android:textColorHint="#B0B0B0"
                android:inputType="numberDecimal"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click calculator icon to compute BMI"
                android:textSize="12sp"
                android:textColor="#808080"
                android:layout_marginBottom="20dp" />

            <!-- Age at First Menstruation -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age at First Menstruation"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/menarcheEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter age in years"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/black"
                android:textColorHint="#B0B0B0"
                android:inputType="number"
                android:layout_marginBottom="24dp" />

            <!-- Section: Lifestyle Factors -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lifestyle Factors"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Have you breastfed? -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have you breastfed?"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/breastfedYesButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/toggle_button_inactive"
                    android:layout_marginEnd="8dp"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/breastfedNoButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="No"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/toggle_button_active"
                    android:layout_marginStart="8dp"
                    android:stateListAnimator="@null" />

            </LinearLayout>

            <!-- Do you consume alcohol? -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you consume alcohol?"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/alcoholYesButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/toggle_button_inactive"
                    android:layout_marginEnd="8dp"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/alcoholNoButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="No"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/toggle_button_active"
                    android:layout_marginStart="8dp"
                    android:stateListAnimator="@null" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Including wine, beer, or spirits"
                android:textSize="12sp"
                android:textColor="#808080"
                android:layout_marginBottom="20dp" />

            <!-- Physical Activity Level -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physical Activity Level"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/activityLowButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Low"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/toggle_button_active"
                    android:layout_marginEnd="8dp"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/activityModerateButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Moderate"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/toggle_button_inactive"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/activityHighButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="High"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/toggle_button_inactive"
                    android:layout_marginStart="8dp"
                    android:stateListAnimator="@null" />

            </LinearLayout>

            <!-- Section: Current Symptoms -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Symptoms"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Recent Breast Pain -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Breast Pain"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experienced in past 3 months"
                        android:textSize="12sp"
                        android:textColor="#808080" />
                </LinearLayout>
                <ToggleButton
                    android:id="@+id/breastPainToggle"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:background="@drawable/toggle_switch_background"
                    android:textOff=""
                    android:textOn=""
                    android:checked="false" />
            </LinearLayout>

            <!-- Breast Cancer History -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breast Cancer History"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/breastCancerYesButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="@drawable/toggle_button_inactive"
                    android:layout_marginEnd="8dp"
                    android:stateListAnimator="@null" />

                <Button
                    android:id="@+id/breastCancerNoButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="No"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/toggle_button_active"
                    android:layout_marginStart="8dp"
                    android:stateListAnimator="@null" />

            </LinearLayout>

            <!-- Additional Notes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Notes"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <EditText
                    android:id="@+id/additionalNotesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Any other symptoms or observations?"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/black"
                    android:textColorHint="#B0B0B0"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:maxLength="300" />

                <TextView
                    android:id="@+id/characterCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="16dp"
                    android:text="0/300"
                    android:textSize="12sp"
                    android:textColor="#808080" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom CTA Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/white">

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Submit &amp; Analyze Risk"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/submit_button_background"
            android:stateListAnimator="@null" />
    </LinearLayout>
</LinearLayout>