<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".settingspage"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settings_background">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/settings_background">

        <!-- Back Arrow -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_side_arrow"
            android:contentDescription="Back"
            android:scaleType="centerInside"
            android:padding="12dp" />

        <!-- Centered Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/settings_primary_text"
            android:gravity="center"
            android:layout_marginEnd="48dp" />

    </LinearLayout>

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Account Settings Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_settings"
                android:textSize="12sp"
                android:textColor="@color/settings_section_title"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp" />

            <!-- Profile Settings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/profileSettingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <!-- Pink Avatar Icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/profile_logo"
                        android:background="@drawable/bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_background" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_settings"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/settings_primary_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_settings_subtitle"
                            android:textSize="14sp"
                            android:textColor="@color/settings_secondary_text"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Right Arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/forntarrow"
                        android:rotation="180"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_secondary_text" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Change Password Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/changePasswordCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <!-- Pink Lock Icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/lock_symbol"
                        android:background="@drawable/bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_pink_primary" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/change_password"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/settings_primary_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/change_password_subtitle"
                            android:textSize="14sp"
                            android:textColor="@color/settings_secondary_text"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Right Arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/forntarrow"
                        android:rotation="180"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_secondary_text" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Notifications Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/notificationsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <!-- Pink Bell Icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/tips_logo_dash"
                        android:background="@drawable/bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_pink_primary" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/notifications"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/settings_primary_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/notifications_subtitle"
                            android:textSize="14sp"
                            android:textColor="@color/settings_secondary_text"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Right Arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/forntarrow"
                        android:rotation="180"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_secondary_text" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- App Preferences Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_preferences"
                android:textSize="12sp"
                android:textColor="@color/settings_section_title"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp" />

            <!-- About App Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/aboutAppCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <!-- Pink Info Icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/aboutapp_logo"
                        android:background="@drawable/bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_pink_primary" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about_app"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/settings_primary_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about_app_subtitle"
                            android:textSize="14sp"
                            android:textColor="@color/settings_secondary_text"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Right Arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/forntarrow"
                        android:rotation="180"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_secondary_text" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Privacy & Security Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/privacySecurityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <!-- Pink Shield Icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/privacy_logo"
                        android:background="@drawable/bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_pink_primary" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_security"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/settings_primary_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_security_subtitle"
                            android:textSize="14sp"
                            android:textColor="@color/settings_secondary_text"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Right Arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/forntarrow"
                        android:rotation="180"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_secondary_text" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- LogOut Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logoutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <!-- Pink Shield Icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/signout_logo"
                        android:background="@drawable/bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_pink_primary" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/logout"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/settings_primary_text" />

                    </LinearLayout>

                    <!-- Right Arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/forntarrow"
                        android:rotation="180"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_secondary_text" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Delete Account Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/deleteAccountCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <!-- Pink Shield Icon -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wrong_logo"
                        android:background="@drawable/bg"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_pink_primary" />

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delete_account"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/settings_primary_text" />

                    </LinearLayout>

                    <!-- Right Arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/forntarrow"
                        android:rotation="180"
                        android:scaleType="centerInside"
                        app:tint="@color/settings_secondary_text" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>