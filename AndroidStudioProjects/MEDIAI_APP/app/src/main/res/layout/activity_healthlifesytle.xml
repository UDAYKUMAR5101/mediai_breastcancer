<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".healthlifesytle"
    android:id="@+id/main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Back Arrow (iOS style) -->
            <TextView
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="❮"
                android:textColor="#222222"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Healthy Lifestyle Tips"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>

        <!-- Card 1: Daily Exercise -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="16dp"
            android:elevation="2dp"
            android:gravity="top"
            android:clipToPadding="false"
            android:backgroundTint="#FFFFFF"
            >

            <!-- Icon with colored circle -->
            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="🏋️‍♂️"
                android:textSize="24sp"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Exercise"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aim for 30 minutes of moderate activity daily. Try walking, swimming, or gentle yoga to maintain physical health."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Card 2: Balanced Nutrition -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="16dp"
            android:elevation="2dp"
            android:gravity="top"
            android:clipToPadding="false"
            >

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="🍏"
                android:textSize="24sp"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balanced Nutrition"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus on a diet rich in fruits, vegetables, and whole grains. Limit processed foods and maintain a healthy weight."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Card 3: Mind & Wellness -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="16dp"
            android:elevation="2dp"
            android:gravity="top"
            android:clipToPadding="false"
            android:backgroundTint="#FFFFFF"
            >

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="🧘‍♀️"
                android:textSize="24sp"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mind &amp; Wellness"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Practice daily meditation or deep breathing exercises. Take time for activities you enjoy and connect with loved ones."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Card 4: Quality Sleep -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="16dp"
            android:elevation="2dp"
            android:gravity="top"
            android:clipToPadding="false"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="🌙"
                android:textSize="24sp"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quality Sleep"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aim for 7–9 hours of sleep each night. Maintain a consistent sleep schedule and create a relaxing bedtime routine."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Card 5: Stay Hydrated -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="16dp"
            android:elevation="2dp"
            android:gravity="top"
            android:clipToPadding="false"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="💧"
                android:textSize="24sp"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay Hydrated"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drink 8 glasses of water daily. Monitor your fluid intake and adjust based on activity level and weather."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom iOS-style indicator bar -->
        <View
            android:layout_width="48dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:alpha="0.15"/>
    </LinearLayout>
</ScrollView>