<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".todolist"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8FA">

    <!-- Back Arrow and Title Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFF8FA"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_side_arrow"
            android:contentDescription="Back"
            android:padding="4dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Daily Checklist"
            android:textColor="#222222"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Date -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday, July 7"
        android:textColor="#222222"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="8dp"/>

    <!-- Checklist Items (Scrollable) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- 1. Drink Water -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drink Water"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 glasses recommended"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_drink_water"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- 2. Take Medication -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take Medication"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning dose"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_take_medication"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- 3. Log Symptoms -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log Symptoms"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track your daily feelings"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_log_symptoms"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- 4. Stretch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stretch"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 minutes of gentle movement"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_stretch"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- 5. Practice Breathing -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Practice Breathing"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 minutes mindful breathing"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_practice_breathing"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- 6. Eat Healthy Meal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eat Healthy Meal"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Focus on nutrition"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switch_eat_healthy"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- Motivational Quote -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="&quot;Small steps every day matter!&quot;"
                android:textColor="#888888"
                android:textSize="16sp"
                android:gravity="center"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>