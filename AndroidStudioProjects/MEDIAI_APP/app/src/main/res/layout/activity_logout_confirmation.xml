<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LogoutConfirmationActivity"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/logout_background_blur">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Modal Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"

            app:cardBackgroundColor="@color/logout_modal_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <!-- Warning Icon -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/warning_icon_background">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wrong_logo"
                        android:scaleType="centerInside"
                        app:tint="@color/white" />

                </FrameLayout>

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout_confirmation_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/logout_title_text"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout_confirmation_description"
                    android:textSize="16sp"
                    android:textColor="@color/logout_description_text"
                    android:gravity="center"
                    android:layout_marginBottom="32dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <!-- Cancel Button -->
                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/logout_cancel_blue"
                        android:background="@drawable/cancel_button_background"
                        android:minWidth="100dp"
                        android:minHeight="48dp"
                        android:layout_marginEnd="16dp"
                        android:stateListAnimator="@null" />

                    <!-- Logout Button -->
                    <Button
                        android:id="@+id/logoutButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logout_confirm"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/logout_button_background"
                        android:minWidth="100dp"
                        android:minHeight="48dp"
                        android:stateListAnimator="@null" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
