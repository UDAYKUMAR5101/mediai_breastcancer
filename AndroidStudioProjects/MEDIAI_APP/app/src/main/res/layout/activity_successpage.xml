<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".successpage"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Back Arrow -->
    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_side_arrow"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Green Checkmark -->
    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/successpage"
        app:layout_constraintTop_toBottomOf="@id/back_arrow"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submission Successful!"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/checkmark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your breast cancer prediction\nrequest has been submitted\nsuccessfully"
        android:textAlignment="center"
        android:textColor="#888888"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- View Result Button -->
    <Button
        android:id="@+id/btn_view_result"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="View Result"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- History Page Button -->
    <Button
        android:id="@+id/btn_history_page"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="HISTORY PAGE"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textColor="#2196F3"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="0dp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/btn_view_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
