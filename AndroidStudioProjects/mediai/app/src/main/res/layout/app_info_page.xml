<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_side_arrow"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111111"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Logo -->
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:src="@drawable/applogo"
            android:scaleType="centerInside" />

        <!-- Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Version 1.0.0"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="MediAi is a powerful tool designed to help you achieve your goals efficiently. Our mission is to provide the best user experience while maintaining simplicity and functionality."
            android:textColor="#444444"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

        <!-- Key Features -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Features"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111111"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Intuitive Interface\n• Smart Automation\n• Real-time Sync\n• Advanced Security"
            android:layout_marginTop="8dp"
            android:textColor="#444444"
            android:textSize="14sp" />

        <!-- Contact Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="support@mediai.com"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.mediai.com"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Social Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:src="@drawable/x_logo"
                android:contentDescription="Twitter" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:src="@drawable/facebook_logo"
                android:contentDescription="Facebook" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:src="@drawable/insta_logo"
                android:contentDescription="Instagram" />
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="© 2024 AppName. All rights reserved."
            android:gravity="center"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="#2563EB"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms of Service"
                android:textColor="#2563EB"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
