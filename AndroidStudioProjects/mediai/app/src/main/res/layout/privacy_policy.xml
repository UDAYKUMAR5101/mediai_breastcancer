<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_side_arrow"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy  Policy"
            android:textStyle="bold"
            android:textColor="#111111"
            android:textSize="18sp"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

    <!-- Scrollable Terms -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to HealthGuard"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111111" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Updated: February 15, 2024"
                android:textSize="12sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Please read these Terms and Conditions carefully before using the breast cancer prediction application."
                android:textColor="#444444"
                android:textSize="14sp" />

            <!-- Section 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Service Description"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our app provides preliminary breast cancer risk assessment tools and information. This is not a substitute for professional medical diagnosis."
                android:textColor="#444444"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Section 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Medical Disclaimer"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The predictions and assessments provided by this application are based on statistical models and should not be considered as medical advice or diagnosis."
                android:textColor="#444444"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Section 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Data Privacy"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We prioritize the security of your medical information. All personal and health data is encrypted and stored according to HIPAA compliance standards."
                android:textColor="#444444"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Section 4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. User Responsibilities"
                android:textStyle="bold"
                android:textColor="#111111"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 Provide accurate information\n\u2022 Maintain account security\n\u2022 Use the service responsibly\n\u2022 Consult healthcare professionals for medic..."
                android:textColor="#444444"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Decline"
            android:textColor="@color/white"
            />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Accept &amp; Continue"
            android:backgroundTint="#2563EB"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
