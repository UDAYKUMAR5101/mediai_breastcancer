<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Top Image -->
        <ImageView
            android:id="@+id/onboardingImage"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:src="@drawable/onboarding_image"
            android:scaleType="centerCrop"
            android:layout_marginTop="32dp"
            android:background="@drawable/second_page_photo"
            android:clipToOutline="true" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Early Detection Saves Lives"
            android:textSize="20sp"
            android:textColor="#111111"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="24dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join millions using AI-powered health predictions for early cancer detection and prevention"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp" />

        <!-- Create Account Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Create Account"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2563EB"
            android:textColor="#FFFFFF" />

        <!-- Login Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Log In"
            android:textColor="#2563EB"
            android:textStyle="bold"
            android:background="@drawable/rounded_outline_button"
            android:layout_marginTop="12dp" />

        <!-- Footer -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By continuing, you agree to our Terms of Service and Privacy Policy"
            android:textColor="#999999"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
