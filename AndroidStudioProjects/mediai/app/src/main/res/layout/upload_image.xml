<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <!-- Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_side_arrow"
                android:contentDescription="Back"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Image Upload"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="16dp" />

        <!-- Upload Placeholder -->
        <LinearLayout
            android:id="@+id/imagePlaceholder"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="25dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/upload_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to upload medical image"
                android:textColor="#444444"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supported formats: JPEG, PNG, DICOM"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Image Guidelines -->
        <!-- Image Guidelines with Title Above -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image Guidelines"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/guidelines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Clear, well-lit images only\n• Ensure proper orientation\n• Minimum resolution: 1000×1000px\n• Maximum file size: 10MB"
                android:textSize="18sp"
                android:textColor="#333333" />
        </LinearLayout>


        <!-- Buttons Side-by-Side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload Image"
                android:backgroundTint="#3B82F6"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Capture from Camera"
                android:backgroundTint="#3B82F6"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Final Centered Reminder -->
        <TextView
            android:id="@+id/checkReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✔ Check once you uploaded the correct image"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#444444"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
