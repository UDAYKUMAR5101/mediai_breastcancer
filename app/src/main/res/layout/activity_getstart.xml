<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".getstart"
    android:gravity="center_horizontal"
    android:background="@drawable/bg">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to MediAI"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="4dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Intelligent Healthcare Assistant"
        android:textSize="16sp"
        android:textColor="#888888"
        android:layout_marginBottom="28dp"/>

    <!-- Cards Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Card 1: AI Prediction -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/get1"
                    android:background="#FFE6EA"
                    android:padding="8dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Prediction"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get accurate health insights powered by advanced AI"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Card 2: History Tracker -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_margin="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/get2"
                    android:background="#FFE6EA"
                    android:padding="8dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History Tracker"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monitor your health journey over time"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Card 3: Risk Assessment -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/risk_factor_logo"
                    android:background="#FFE6EA"
                    android:padding="8dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Risk Assessment"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Early detection of potential health risks"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Card 4: Easy Reports -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="14dp"
                android:layout_margin="8dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/imagenum_logo"
                    android:background="#FFE6EA"
                    android:padding="8dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Easy Reports"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seamlessly upload and manage medical reports"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Spacer to push button to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Get Started Button -->
    <Button
        android:id="@+id/btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="Get Started"
        android:layout_marginTop="32dp"
        android:backgroundTint="#BD17BC"
        android:textColor="@color/bg_card_rounded"/>
</LinearLayout>