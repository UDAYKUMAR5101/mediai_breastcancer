<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="40dp"
    android:paddingBottom="24dp"
    tools:context=".UploadpageActivity">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back_side_arrow"
                android:contentDescription="Back"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Image Upload"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222222" />
        </LinearLayout>

        <!-- Image Preview Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:backgroundTint="#F5F7FA">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">
                
                <!-- Image Preview -->
                <ImageView
                    android:id="@+id/image_preview"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/upload_image"
                    android:contentDescription="Image Preview"
                    android:visibility="gone" />
                
                <!-- Upload Placeholder (shown when no image) -->
                <LinearLayout
                    android:id="@+id/upload_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/upload_image" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to upload medical image"
                        android:textColor="#444444"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supported formats: JPEG, PNG, DICOM"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Guidelines Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            app:cardElevation="2dp"
            android:backgroundTint="#F8F9FB">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Image Guidelines"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginBottom="8dp" />
                <TextView
                    android:id="@+id/guidelines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Clear, well-lit images only\n• Ensure proper orientation\n• Minimum resolution: 1000×1000px\n• Maximum file size: 10MB"
                    android:textSize="15sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Upload & Camera Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="18dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upload_image"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Upload Image"
                app:cornerRadius="24dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3B82F6"
                android:layout_marginEnd="8dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_capture_camera"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="22dp"
                android:text="Capture from Camera"
                app:cornerRadius="24dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3B82F6"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Submit Button and Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="18dp">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Submit Image"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                app:cornerRadius="28dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2563EB"
                android:textStyle="bold"
                android:textSize="17sp" />
                
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Final Centered Reminder -->
        <TextView
            android:id="@+id/checkReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✔ Check once you uploaded the correct image"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#444444"
            android:gravity="center"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
