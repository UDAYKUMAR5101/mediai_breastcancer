<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".UploadpageActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@drawable/back_side_arrow"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Image Upload"
            android:padding="10dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222" />
    </LinearLayout>

    <!-- Upload Placeholder Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:backgroundTint="#F5F7FA">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/upload_image" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to upload medical image"
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supported formats: JPEG, PNG, DICOM"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Guidelines Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:backgroundTint="#F8F9FB">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            android:padding="18dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image Guidelines"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/guidelines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Clear, well-lit images only\n• Ensure proper orientation\n• Minimum resolution: 1000×1000px\n• Maximum file size: 10MB"
                android:textSize="15sp"
                android:textColor="#333333" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Upload & Camera Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:layout_marginBottom="18dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upload_image"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Upload Image"
            app:cornerRadius="24dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:layout_marginEnd="8dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_capture_camera"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Capture from Camera"
            app:cornerRadius="24dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Submit Image"
        app:cornerRadius="28dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2563EB"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginBottom="18dp" />

    <!-- Final Centered Reminder -->
    <TextView
        android:id="@+id/checkReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✔ Check once you uploaded the correct image"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="#444444"
        android:gravity="center"
        android:layout_marginBottom="8dp" />
</LinearLayout>
