<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Mode Icon -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginEnd="16dp">
            <ImageView
                android:id="@+id/modeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/symtos_first" />
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/modeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptom Check"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mar 15, 2024 at 2:30 PM"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <!-- Symptoms section (visible if present) -->
            <TextView
                android:id="@+id/symptomsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptoms:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/symptomsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:visibility="gone"/>

            <!-- Prediction section -->
            <TextView
                android:id="@+id/predictionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prediction:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/predictionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13sp"/>

        </LinearLayout>

        <!-- Risk Level Badge -->
        <TextView
            android:id="@+id/riskLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Risk"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_risk_low"
            android:textStyle="bold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"/>

        <!-- Percentage removed for V2 list -->

    </LinearLayout>

</androidx.cardview.widget.CardView>
