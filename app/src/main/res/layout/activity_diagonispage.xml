<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".diagonispage"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- Status Bar (Mockup, for real use handled by system) -->


    <!-- Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_side_arrow"
            android:contentDescription="Back"
            android:padding="4dp"
            app:tint="#B0B0B0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Diagnosis History"
            android:textColor="#111111"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Hero Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/diagosis"
                android:background="@drawable/rounded_corners"
                android:contentDescription="Diagnosis Banner"
                android:layout_marginBottom="20dp" />

            <!-- Symptoms Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptoms"
                android:textColor="#111111"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
            </LinearLayout>

            <!-- Submission Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/dotimage"
                    android:contentDescription="Calendar"
                    app:tint="#888888" />

                <TextView
                    android:id="@+id/submittedDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submitted on April 15, 2024"
                    android:textColor="#222222"
                    android:textSize="14sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <!-- Risk Status Tag -->
            <TextView
                android:id="@+id/riskStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low Risk"
                android:textColor="#219653"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Doctor Notes Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Notes"
                    android:textColor="#111111"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/doctorNotesContentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient presents with mild symptoms consistent with viral upper respiratory infection. Recommended rest and over-the-counter analgesics. Follow-up if symptoms persist beyond 7 days or worsen significantly."
                    android:textColor="#444444"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Action Buttons -->
            <Button
                android:id="@+id/btn_download_pdf"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#4285F4"
                android:text="Download PDF"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btn_share_report"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/share_button_bg"
                android:text="Share Report"
                android:textColor="#4285F4"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>