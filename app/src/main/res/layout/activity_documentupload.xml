<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".documentupload"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:paddingStart="15dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/back_side_arrow"
                android:contentDescription="Back"
                android:padding="4dp"
                app:tint="#333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload Medical Documents"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center" />

            <View
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </LinearLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="0dp"
                android:gravity="center_horizontal">

                <!-- Upload Prompt Area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="24dp">

                    <ImageView
                        android:id="@+id/upload_icon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/upload"
                        android:contentDescription="Upload"
                        app:tint="#2F80ED" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to Upload"
                        android:textColor="#4F4F4F"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supported: PDF, JPG, PNG"
                        android:textColor="#BDBDBD"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Category Filter Tabs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2F80ED"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Prescription"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2F80ED"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Lab Report"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2F80ED"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Scan Report"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Uploaded Files Grid (2-column) -->
                <GridLayout
                    android:id="@+id/files_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:rowOrderPreserved="false"
                    android:useDefaultMargins="true"
                    android:layout_marginBottom="16dp">

                    <!-- File Card: Blood Test Report -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="start|center_vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/pdf"
                                    android:contentDescription="PDF"
                                    android:layout_marginEnd="8dp" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <FrameLayout
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:backgroundTint="#FF4B4B"
                                    android:background="@color/profile_red"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/delete1"
                                        android:layout_gravity="center"
                                        android:contentDescription="Delete"
                                        app:tint="#FFFFFF" />
                                </FrameLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Blood Test Report"
                                android:textColor="#333333"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lab Report"
                                android:textColor="#828282"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.4 MB   Jan 15, 2024"
                                android:textColor="#BDBDBD"
                                android:textSize="12sp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- File Card: X-Ray Scan -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="start|center_vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/pdf"
                                    android:contentDescription="PDF"
                                    android:layout_marginEnd="8dp" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <FrameLayout
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:backgroundTint="#FF4B4B"
                                    android:background="@android:color/holo_red_light"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/delete1"
                                        android:layout_gravity="center"
                                        android:contentDescription="Delete"
                                        app:tint="#FFFFFF" />
                                </FrameLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="X-Ray Scan"
                                android:textColor="#333333"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scan Report"
                                android:textColor="#828282"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5.1 MB   Jan 14, 2024"
                                android:textColor="#BDBDBD"
                                android:textSize="12sp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- File Card: Medication List -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="start|center_vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/pdf"
                                    android:contentDescription="PDF"
                                    android:layout_marginEnd="8dp" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <FrameLayout
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:backgroundTint="#FF4B4B"
                                    android:background="@android:color/holo_red_light"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/delete1"
                                        android:layout_gravity="center"
                                        android:contentDescription="Delete"
                                        app:tint="#FFFFFF" />
                                </FrameLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medication List"
                                android:textColor="#333333"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Prescription"
                                android:textColor="#828282"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.2 MB   Jan 13, 2024"
                                android:textColor="#BDBDBD"
                                android:textSize="12sp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>