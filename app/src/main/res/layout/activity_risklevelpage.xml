<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="0dp"
    tools:context=".risklevelpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/back_side_arrow"
                android:contentDescription="Back"
                app:tint="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk Assessment Result"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Circular Progress with Percentage -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal">

            <!-- Use a custom view or library for real circular progress, here just a placeholder -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15%"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low Risk"
                    android:textSize="18sp"
                    android:textColor="#4CAF50" />
            </LinearLayout>
        </FrameLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:backgroundTint="#F7FAFC">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Based on your assessment, you have a low risk of developing breast cancer. Regular screening is still recommended."
                android:textColor="#222"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>

        <!-- Key Risk Factors -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Risk Factors"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Age -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="#2196F3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Age"
                    android:textSize="15sp"
                    android:textColor="#222" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   35 years"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Family History -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#2196F3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Family History"
                    android:textSize="15sp"
                    android:textColor="#222" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   No direct relatives"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Lifestyle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    app:tint="#2196F3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Lifestyle"
                    android:textSize="15sp"
                    android:textColor="#222" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Active"
                    android:textSize="15sp"
                    android:textColor="#222"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Recommended Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommended Actions"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Action 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_month"
                    app:tint="#2196F3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Schedule annual mammogram"
                    android:textSize="15sp"
                    android:textColor="#222" />
            </LinearLayout>

            <!-- Action 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/health"
                    app:tint="#2196F3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Maintain healthy lifestyle"
                    android:textSize="15sp"
                    android:textColor="#222" />
            </LinearLayout>

            <!-- Action 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:tint="#2196F3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Regular self-examination"
                    android:textSize="15sp"
                    android:textColor="#222" />
            </LinearLayout>
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Save Result Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Result"
            style="@style/Widget.MaterialComponents.Button"
            android:textAllCaps="false"
            app:icon="@android:drawable/ic_menu_save"
            app:cornerRadius="8dp"
            android:layout_marginBottom="8dp"
            app:iconTint="@android:color/white"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white" />

        <!-- Breast Cancer Guide Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBreastCancerGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breast Cancer Guide"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAllCaps="false"
            app:icon="@android:drawable/ic_menu_info_details"
            app:cornerRadius="8dp"
            app:strokeColor="#2196F3"
            app:strokeWidth="2dp"
            android:textColor="#2196F3"
            app:iconTint="#2196F3" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
