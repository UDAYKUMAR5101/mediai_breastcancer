<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ChooseaccountActivity"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Top Image with Rounded Corners -->
        <androidx.cardview.widget.CardView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/onboardingImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/second_page_photo"
                android:contentDescription="Onboarding image" />
        </androidx.cardview.widget.CardView>

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Early Detection Saves Lives"
            android:textSize="20sp"
            android:textColor="#111111"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join millions using AI-powered health predictions for early cancer detection and prevention"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp" />

        <!-- Create Account Button -->
        <Button
            android:id="@+id/createAccountButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Create Account"
            android:layout_marginTop="32dp"
            android:backgroundTint="#2563EB"
            android:textColor="#FFFFFF" />

        <!-- Login Button -->
        <Button
            android:id="@+id/Login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Login"
            android:layout_marginTop="12dp"
            android:backgroundTint="#E5E7EB"
            android:textColor="#2563EB" />

        <!-- Footer -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By continuing, you agree to our Terms of Service and Privacy Policy"
            android:textColor="#999999"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</LinearLayout>
